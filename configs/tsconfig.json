{
    "compilerOptions": {
        "module": "es2022",
        "target": "ESNext",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "allowJs": true,
        "checkJs": false,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "../.bin",
        "baseUrl": "../src",
        "resolveJsonModule": true,
        "strict": true,
        "typeRoots": ["../node_modules"],
        "types": [
            "@minecraft/server",
            "@minecraft/server-editor"
        ],
        "skipLibCheck": true
    },
    "exclude": ["../node_modules"],
    "include": ["../src/"]
}