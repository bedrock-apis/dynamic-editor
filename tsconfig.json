{
    "compilerOptions": {
        "module": "es2022",
        "target": "ESNext",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "allowJs": true,
        "checkJs": false,
        "allowSyntheticDefaultImports": true,
        "outDir": "./packs/BP/scripts/",
        "baseUrl": "./src",
        "resolveJsonModule": true,
        "strict": true,
        "typeRoots": ["./node_modules"],
        "types": [
            "@minecraft/server",
            "@minecraft/server-editor"
        ],
        "skipLibCheck": true
    },
    "exclude": ["./node_modules"],
    "include": ["./src/**/*"]
}